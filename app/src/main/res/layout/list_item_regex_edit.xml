<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/edit_handle"
        android:layout_width="40dp"
        android:paddingEnd="12dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/edit_drag_handle"
        app:srcCompat="@drawable/vd_drag_handle"
        app:tint="?colorSecondary" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/edit_pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBodyLarge"
            android:maxLines="1"
            tools:text="regex pattern" />

        <TextView
            android:id="@+id/edit_replacement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="replacement"
            android:maxLines="1"
            app:drawableStartCompat="@drawable/vd_arrow_right_bottom"
            app:drawableTint="?colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit_field"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:tint="?colorPrimary"
                android:contentDescription="@string/edit_field"
                tools:srcCompat="@drawable/vd_album_artist" />

            <TextView
                android:id="@+id/edit_replace_all"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="?colorPrimary"
                android:text="@string/edit_all" />

            <TextView
                android:id="@+id/edit_case_sensitive"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="?colorPrimary"
                android:contentDescription="@string/edit_case_sensitive"
                android:text="@string/edit_case_sensitive_aa" />

            <ImageView
                android:id="@+id/edit_continue_matching"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/edit_continue"
                app:tint="?colorPrimary"
                app:srcCompat="@drawable/vd_arrow_right_filled" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>