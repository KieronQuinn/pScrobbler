<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/charts_period_scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.ChipGroup
            android:theme="@style/AppThemeMaterial"
            android:layout_gravity="start"
            app:singleLine="true"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:id="@+id/charts_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_choose_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/vd_drop_down"
                app:chipIconTint="@color/colorAccentLight"
                android:text="@string/charts_choose_week" />
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_7day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts_7day" />
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_1month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts_1month" />
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_3month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts_3month" />
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_6month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts_6month" />
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_12month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts_12month" />
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/charts_overall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts_overall" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/charts_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="@string/charts_no_data"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/charts_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/charts_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>