<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin">

    <RadioGroup
        android:id="@+id/import_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/import_edits_keep">

        <RadioButton
            android:id="@+id/import_edits_nope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding"
            android:text="@string/import_edits_nope"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <RadioButton
            android:id="@+id/import_edits_replace_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding"
            android:text="@string/import_edits_replace_all"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <RadioButton
            android:id="@+id/import_edits_replace_existing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding"
            android:text="@string/import_edits_replace_existing"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <RadioButton
            android:id="@+id/import_edits_keep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding"
            android:text="@string/import_edits_keep"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <CheckBox
        android:id="@+id/import_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_padding"
        android:text="@string/import_settings"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
</LinearLayout>