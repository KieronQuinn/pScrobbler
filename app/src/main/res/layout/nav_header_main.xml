<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/nav_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    >


    <ImageView
        android:id="@+id/nav_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:fitsSystemWindows="true"
        app:srcCompat="@drawable/ic_placeholder_music"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/nav_profile_pic"
        android:layout_alignEnd="@+id/nav_profile_pic"
        android:layout_alignStart="@+id/nav_profile_pic"
        android:layout_marginTop="45dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/gradient_dark_overlay_nav"/>

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_num_scrobbles"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/nav_profile_link"
        android:gravity="center|end"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAllCaps="false"
        android:textStyle="bold"
        tools:text="nav_name"/>

    <TextView
        android:id="@+id/nav_num_scrobbles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nav_profile_pic"
        android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
        android:layout_toStartOf="@+id/nav_profile_link"
        android:gravity="center|end"
        tools:text="nav_num_scrobbles"/>

    <ImageButton
        android:id="@+id/nav_profile_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/fab_margin"
        app:srcCompat="@drawable/vd_open_in_new"/>

</RelativeLayout>
