<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sample="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="true"
        android:persistent="true"
        android:key="master"
        android:summaryOff="Scrobbler is now disabled"
        android:summaryOn="Scrobbler is active"
        android:title="Master switch"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="show_notifications"
        android:persistent="true"
        android:summaryOff="Check your scrobbbles from the app only"
        android:summaryOn="...while scrobbling"
        android:title="Notifications"/>
    <PreferenceCategory
        android:title="Scrobble from">

        <Preference
            android:defaultValue="true"
            android:key="app_list"
            android:icon="@drawable/ic_placeholder_music"
            android:persistent="true"
            android:summary="Scrobble from these apps (any app which can play music with metadata is supported)"
            android:title="Enabled apps"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="scrobble_common_players"
            android:icon="@drawable/ic_placeholder_music"
            android:persistent="true"
            android:summary="Other common music players"
            android:title="Others"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Scrobble delay (whichever is earliest)">

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            android:key="delay_secs"
            android:title="Delay in secs"
            android:defaultValue="30"

            sample:msbp_minValue="10"
            sample:msbp_maxValue="60"
            sample:msbp_interval="1"
            sample:msbp_measurementUnit="secs"
            sample:msbp_dialogEnabled="false"/>

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            android:key="delays_per"
            android:title="Delay in percent"
            android:defaultValue="30"

            sample:msbp_minValue="15"
            sample:msbp_maxValue="75"
            sample:msbp_interval="1"
            sample:msbp_measurementUnit=" %"
            sample:msbp_dialogEnabled="false"/>

        <Preference
            android:summary="Note that your Now Playing always gets updated as soon as the song starts playing, regardless of the delay"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Logout of last.fm">
        <Preference
            android:title="Logout and Reauthorize"
            android:key="reauth"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="About">
        <Preference
            android:title="version"
            android:key="about"
            />
    </PreferenceCategory>
</PreferenceScreen>