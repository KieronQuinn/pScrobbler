<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sample="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="true"
        android:persistent="true"
        android:key="master"
        android:summaryOff="@string/pref_master_off"
        android:summaryOn="@string/pref_master_on"
        android:title="@string/pref_master"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="show_notifications"
        android:persistent="true"
        android:summaryOff="@string/pref_noti_off"
        android:summaryOn="@string/pref_noti_on"
        android:title="@string/pref_noti"/>
    <SwitchPreference
        android:defaultValue="true"
        android:key="offline_scrobble"
        android:persistent="true"
        android:summaryOff="@string/pref_offline_off"
        android:summaryOn="@string/pref_offline_on"
        android:title="@string/pref_offline"/>
    <PreferenceCategory
        android:title="@string/pref_scrobble_from">
        <com.arn.scrobble.pref.AppIconsPref
            android:title="@string/pref_enabled_apps"
            android:key="app_whitelist"/>
        <Preference
            android:defaultValue="true"
            android:key="open_app_list"
            android:icon="@drawable/vd_add"
            android:summary="@string/pref_enabled_apps_summary"
            android:title="@string/pref_enabled_apps_title"/>

        <SwitchPreference
            android:defaultValue="true"
            android:key="auto_detect"
            android:persistent="true"
            android:summary="@string/pref_auto_detect_summary"
            android:title="@string/pref_auto_detect"/>


    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_delay">

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            android:key="delay_secs"
            android:title="@string/pref_delay_secs"
            android:defaultValue="60"

            sample:msbp_minValue="20"
            sample:msbp_maxValue="120"
            sample:msbp_interval="1"
            sample:msbp_measurementUnit="secs"
            sample:msbp_dialogEnabled="false"/>

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            android:key="delay_per"
            android:title="@string/pref_delay_per"
            android:defaultValue="40"

            sample:msbp_minValue="30"
            sample:msbp_maxValue="75"
            sample:msbp_interval="1"
            sample:msbp_measurementUnit="%"
            sample:msbp_dialogEnabled="false"/>

        <Preference
            android:summary="@string/pref_delay_note"
            android:selectable="false"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_logout">
        <Preference
            android:title="@string/pref_logout_title"
            android:key="reauth"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_about">
        <Preference
            android:title="@string/pref_about_title"
            android:summary="https://github.com/kawaiiDango/pScrobbler"
            android:key="about"
            />
    </PreferenceCategory>
</PreferenceScreen>